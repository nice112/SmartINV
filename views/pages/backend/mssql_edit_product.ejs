<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-5">
        <h1 class="h3 mb-0 text-gray-800"><%- heading %></h1>
        <a href="/backend/mssqlproducts" class="d-none d-sm-inline-block btn btn-warning shadow-sm"><i class="fas fa-arrow-left fa-sm text-white-50"></i> Back</a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-md-6 offset-md-3 card">
            <div class="card-body">
                
                <% if(messages.error) { %>
                    <div class="alert alert-danger"><%-messages.error%></div>
                <% } %>

                <% if(messages.success) { %>
                    <div class="alert alert-success/<%-data[0].productID  %> " method= "POST"></div>
                <% } %>

                <form action="/backend/mssql_edit_product" method="POST">
                    <div class="form-group row">
                        <label for="ProductName" class="col-md-4 col-form-label">Name</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="ProductName" 
                            value="<%-data[0].ProductName%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CategoryID" class="col-md-4 col-form-label">Category</label>
                        <div class="col-md-8">
                            <select name="CategoryID" id="CategoryID" class="form-control">
                                <option value="1" <% if(data[0].CategoryID == 1){%> selected <%}%>>Mobile</option>
                                <option value="2" <% if(data[0].CategoryID == 2){%> selected <%}%>>Tablet</option>
                                <option value="3"<% if(data[0].CategoryID == 3){%> selected <%}%>>Smart Watch</option>
                                <option value="4"<% if(data[0].CategoryID == 4){%> selected <%}%>>Labtop</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="UnitPrice" class="col-md-4 col-form-label">Price</label>
                        <div class="col-md-8">
                            <input type="number" min="1" step="any" class="form-control" name="UnitPrice" 
                            value="<%-data[0].UnitPrice%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="UnitInStock" class="col-md-4 col-form-label">Stock</label>
                        <div class="col-md-8">
                            <input type="number" class="form-control" name="UnitInStock" value="<%-data[0].UnitInStock%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ProductPicture" class="col-md-4 col-form-label">Image URL</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="ProductPicture" value="<%-data[0].ProductPicture%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputName" class="col-md-4 col-form-label">&nbsp;</label>
                        <div class="col-md-8">
                            <input type="submit" class="btn btn-success" value="Add"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>